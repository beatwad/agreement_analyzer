{
    "manifest_version": 3,
    "name": "TOS RedFlags",
    "version": "1.0",
    "description": "Detect red flags in Terms of Service/User Agreement/Contract/etc using LLM",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }